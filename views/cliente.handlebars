    <header>
        <div class="header">
            <a href="#default" class="logo">ADVO</a>
            <div class="header-right">
                <a class="active" href="#home">Home</a>
                <a href="#contact">Contact</a>
                <a href="#about">About</a>
            </div>
        </div>
    </header>
    <section class="sec">
        <h1>CADASTRO DE CLIENTES</h1>
        <div id="resultado">

        </div>
        <form action="/add" method="POST" enctype="multipart/form-data">
            <div class="container">
                <div class="main">
                    <div class="card">
                        <fieldset>
                            <legend>Perfil</legend>
                            <div class="foto">
                                <div class="perfil">
                                    <img src="perfil.jpg" style="width: 300px; height: 300px;"><br><br>
                                    <input type="file" name="pug" id="pug" onchange="previewImagem()"><br><br>
                                </div>
                                <div class="campo">
                                    <input required type="text" name="nome" id="nome" value="" placeholder=" Nome" title="Nome completo">
                                </div>
                                <div class="campo">
                                    <label>Sexo</label>
                                    <label>
                                        <input type="radio" name="sexo" value="masculino">Masculino
                                    </label>
                                    <label>
                                        <input type="radio" name="sexo" value="feminino">Feminino
                                    </label>
                                </div>
                                <div class="campo">
                                    <input required type="text" nome="telefone" id="telefone" value="" placeholder=" Telefone 1" pattern="^\d{2}\d{5}\d{4}$" title="Insira um valor válido 00 00000 0000">
                                    <input type="text" nome="telefone" id="telefone2" value="" placeholder=" Telefone 2" pattern="^\d{2}\d{5}\d{4}$" title="Insira um valor válido 00 00000 0000">
                                </div>
                                <div class="campo">
                                    <input type="email" name="email" id="email" value="" placeholder=" Email">
                                </div>
                            </div>

                        </fieldset>
                    </div>
                    <div class="card">
                        <fieldset class="cadastro">
                            <legend>Dados Cadastrais</legend>


                            <div class="campo">
                                <input required type="text" name="cep" id="cep" value="" placeholder=" CEP">
                            </div>
                            <div class="campo">
                                <input required type="text" name="endereço" id="endereço" value="" placeholder=" Endereço">
                                <div class="select">
                                    <select name="bairro" id="bairro">
                                        <option selected disabled>Bairro</option>
                                        <option value="ulisses">Ulisses Guimarães</option>
                                        <option value="Tiradentes">Tiradentes</option>
                                        <option value="pedrinhas">Pedrinhas</option>
                                    </select>
                                </div>
                            </div>
                            <div class="campo">
                                <input required type="text" name="cidade" id="cidade" value="" placeholder=" Cidade">
                                <div class="select">
                                    <select name="estado" id="estado">
                                    <option selected disabled>Estado</option>
                                    <option value="RO">RO</option>
                                    <option value="CE">CE</option>
                                </select>
                                </div>
                            </div>
                            <div class="campo">
                                <textarea rows="10" type="textarea" name="observacao" id="observacao" placeholder=" Observações"></textarea>
                            </div>
                            <div class="campo">
                                <button type="submit" name="submit">Enviar</button>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
    </section>
